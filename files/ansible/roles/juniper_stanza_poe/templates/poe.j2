{% if configuration.poe is defined %}
poe {
    {% if configuration.poe.interface is defined %}
    {% if configuration.poe.interface is not mapping and configuration.poe.interface is not string %}
    {% for each in configuration.poe.interface %}
    interface {{ each.name }};
    {% endfor %}
    {% else %}
    interface {{ configuration.poe.interface.name }};
    {% endif %}
    {% endif %}
}
{% endif %}